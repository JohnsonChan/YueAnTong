<resources>

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light.NoTitleBar">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <style name="text_shadow">
        <item name="android:shadowColor">@android:color/white</item> <!-- 设置无标题 -->
        <item name="android:shadowRadius">1.0</item> <!-- 设置无标题 -->
        <item name="android:shadowDx">1.2</item> <!-- 设置无标题 -->
        <item name="android:shadowDy">1.2</item> <!-- 设置无标题 -->
    </style>
    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>


    <style name="popwin_animation">
        <item name="android:windowEnterAnimation">@anim/popwin_show</item>
        <item name="android:windowExitAnimation">@anim/popwin_hide</item>
    </style>
</resources>